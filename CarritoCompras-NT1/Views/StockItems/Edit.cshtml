@model CarritoCompras_NT1.Models.StockItem

@{
    ViewData["Title"] = "Edit";
}

<h4>Modificando Stock</h4>
<hr />
@if (User.IsInRole("Administrador"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="SucursalID" class="control-label"></label>
                    <select asp-for="SucursalID" class="form-control" asp-items="ViewBag.SucursalID"></select>
                    <span asp-validation-for="SucursalID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoID" class="control-label"></label>
                    <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.ProductoID"></select>
                    <span asp-validation-for="ProductoID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" min="0" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Confirmar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
}

@if (User.IsInRole("Empleado"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SucursalID" />
                <input type="hidden" asp-for="ProductoID" />
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" min="0" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Confirmar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
