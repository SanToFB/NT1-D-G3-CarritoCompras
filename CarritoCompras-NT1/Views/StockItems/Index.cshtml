@model IEnumerable<CarritoCompras_NT1.Models.StockItem>

@{
    ViewData["Title"] = "Index";
    string error = TempData["ErrorStock"] as string;
    var hayError = !string.IsNullOrWhiteSpace(error);

}

<h1>Stock</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Agregar Stock</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sucursal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                Descripcion Producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sucursal.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (hayError)
{
    @section Scripts {
        <script>
            alertify.error('@error');
        </script>
    }
}
