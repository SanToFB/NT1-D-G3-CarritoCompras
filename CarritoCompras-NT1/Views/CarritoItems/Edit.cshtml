@model CarritoCompras_NT1.Models.CarritoItem

@{
    ViewData["Title"] = "Edit";
}

<h4>Agregar Unidades</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CarritoID" />
            <input type="hidden" asp-for="ProductoID" />
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" id="numCantId" onchange="calcularSubtotal()" min="0" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
                <span class="text-danger">@ViewBag.Error</span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitario" class="control-label"></label>
                <input asp-for="ValorUnitario" id="numValorUnitarioId" readonly class="form-control" />
                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subtotal" class="control-label"></label>
                <input asp-for="Subtotal" id="numTotalId" readonly class="form-control" />
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function calcularSubtotal()
    {
        document.getElementById("numTotalId").value =
            document.getElementById("numCantId").value * document.getElementById("numValorUnitarioId").value;
    }



</script>